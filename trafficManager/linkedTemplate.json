      {
        "apiVersion": "2015-11-01",
        "type": "Microsoft.Network/trafficManagerProfiles",
        "name": "kristianTMProfile",
        "location": "global",
        "properties": {
          "profileStatus": "Enabled",
          "trafficRoutingMethod": "Priority",
          "dnsConfig": {
            "relativeName": "[parameters('uniqueDnsName')]",
            "ttl": 30
          },
          "monitorConfig": {
            "protocol": "HTTPS",
            "port": 443,
            "path": "/"
          },
          "endpoints": [
              {
                  "name": "[parameters('uniqueDnsNameForWebApp1')]",
                  "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                  "properties": {
                      "endpointStatus": "Enabled",
                      "targetResourceId": "[resourceId('Microsoft.Web/sites', parameters('uniqueDnsNameForWebApp1'))]",
                      "weight": 1,
                      "priority": 1,
                      "endpointLocation": "[parameters('webAppLocation1')]"
                  }
              },
              {
                "name": "[parameters('uniqueDnsNameForWebApp2')]",
                "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                "properties": {
                    "endpointStatus": "Enabled",
                    "targetResourceId": "[resourceId('Microsoft.Web/sites', parameters('uniqueDnsNameForWebApp2'))]",
                    "weight": 1,
                    "priority": 2,
                    "endpointLocation": "[parameters('webAppLocation2')]"
                }
            },
          ]
        }
      }
